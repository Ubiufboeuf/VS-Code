---
import type { Code } from "astro:components";
---

<nav>
    <ul>
        <li>
            <a>Menú</a>
            <a>Inicio</a>
        </li>
        <li>
            <input type="text" placeholder="Busca un elemento"/>
        </li>
        <li>
            <button>Añadir elemento</button>
        </li>
    </ul>
</nav>

<p id="hora"></p>

<style>
    nav {
        background: var(--color-palet2-1);
        height: 60px;
        width: 100%;
    }

    ul {
        display: grid;
        grid-auto-flow: column;
        height: 60px;
        margin: 0;
        padding: 0;
        grid-template-columns: minmax(200px, 1fr) 3fr minmax(200px, 1fr);
    }

    li {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 60px;
    }

    li > a {
        color: var(--color-palet1-3);
        display: flex;
    }

    button {
        /* background: rgb(64 98 178 / .8); */
        background-color: var(--color-palet2-2);
        height: 60%;
        width: 80%;
        border-radius: var(--br);
        border: none;
        color: white;
        cursor: pointer;
        transition:
            box-shadow 0.3s ease,
            background-color 0.1s ease;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
        padding: 0;
        font-size: 14px;
        font-weight: 500;
        border: 2px solid var(--color-palet2-3);
    }

    button:hover {
        box-shadow: 0 0 8px rgb(255 255 255 / 0.4);
    }

    button:active {
        background-color: var(--color-palet2-3);
    }

    input {
        height: 60%;
        width: 80%;
        border: none;
        border-radius: var(--br);
        padding: 16px;
        background-color: var(--color-palet2-4);
        color: var(--color-palet2-1);
        font-size: 14px;
        font-weight: 500;
    }

    input:focus {
        outline: none;
    }

    #hora {
        color: black;
        position: absolute;
        top: 200px;
        left: 200px;
        font-size: 32px;
    }
</style>
