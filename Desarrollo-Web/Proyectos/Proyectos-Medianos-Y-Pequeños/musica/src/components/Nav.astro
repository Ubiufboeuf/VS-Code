import type { Code } from "astro:components";
---

<nav>
    <ul>
        <li>
            <a>
                <span class="material-symbols-outlined">&#xe5d2</span>
            </a>
            <a>Inicio</a>
        </li>
        <li>
            <input id="search" type="text" placeholder="Busca un elemento" />
        </li>
        <li>
            <label id="addElement">
                Selecciona un archivo
                <input id="inputFile" type="file" hidden />
            </label>
        </li>
    </ul>
</nav>

<p id="hora"></p>

<style>
    nav {
        background: var(--color-palet2-1);
        height: 60px;
        width: 100%;
    }

    ul {
        display: grid;
        grid-auto-flow: column;
        height: 60px;
        margin: 0;
        padding: 0;
        grid-template-columns: minmax(200px, 1fr) 3fr minmax(200px, 1fr);
    }

    li {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 60px;
    }

    li:nth-child(1) {
        /* background: red; */
        justify-content: left;
        padding-left: 40px;
    }

    li:nth-child(3) {
        /* background: blue; */
        justify-content: right;
        padding-right: 40px;
    }

    li > a {
        color: var(--color-palet1-3);
        display: flex;
        cursor: pointer;
        /* background: red; */
        padding: 8px;
        border-radius: 50%;
        transition: background 0.3s ease;
    }

    li > a:hover {
        background: rgb(255 255 255 / 0.3);
    }

    li > a:nth-child(2) {
        margin-left: 20px;
        padding: 8px 12px;
        border-radius: 20px;
    }

    #search {
        height: 60%;
        width: 80%;
        border: none;
        border-radius: var(--br);
        padding: 16px;
        background-color: var(--color-palet2-4);
        color: rgb(16 16 16 / 0.7);
        font-size: 14px;
        font-weight: 500;
    }

    #search:focus {
        outline: none;
    }

    #addElement {
        /* background: rgb(64 98 178 / .8); */
        background-color: var(--color-palet2-2);
        height: 60%;
        width: 80%;
        border-radius: var(--br);
        border: none;
        color: white;
        cursor: pointer;
        transition:
            box-shadow 0.3s ease,
            background-color 0.1s ease;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
        padding: 0;
        font-size: 14px;
        font-weight: 500;
        border: 2px solid var(--color-palet2-3);
    }

    #addElement:hover {
        box-shadow: 0 0 8px rgb(255 255 255 / 0.4);
    }

    #addElement:active {
        background-color: var(--color-palet2-3);
    }

    #hora {
        color: black;
        position: absolute;
        top: 200px;
        left: 200px;
        font-size: 32px;
    }

    .material-symbols-outlined {
        font-variation-settings:
            "FILL" 0,
            "wght" 400,
            "GRAD" 0,
            "opsz" 24;
    }
</style>

